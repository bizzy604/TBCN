SECRET_KEY=super-secret-key-that-is-at-least-32-characters-long

# ==============================================
# OAuth - Social Login
# ==============================================

# Google OAuth2
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/v1/auth/google/callback

# Facebook OAuth
# Create app at: https://developers.facebook.com/apps
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_CALLBACK_URL=http://localhost:4000/api/v1/auth/facebook/callback

# LinkedIn OAuth2
# Create app at: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_CALLBACK_URL=http://localhost:4000/api/v1/auth/linkedin/callback

# Frontend URL (for OAuth redirect after callback)
FRONTEND_URL=http://localhost:3000

# Public API URL (used to construct webhook callback URLs)
API_PUBLIC_URL=http://localhost:4000/api/v1

# ==============================================
# Payments - Paystack
# ==============================================
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret
# Optional: force a merchant-supported currency (e.g. NGN)
PAYSTACK_CURRENCY=

# ==============================================
# Payments - M-PESA Daraja
# ==============================================
MPESA_ENV=sandbox
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your_mpesa_passkey
# Optional override. Must be a public HTTPS URL in sandbox/production.
MPESA_CALLBACK_URL=
# Fallback used when MPESA_CALLBACK_URL/API_PUBLIC_URL is not publicly reachable (local dev).
MPESA_SANDBOX_CALLBACK_FALLBACK=https://example.com/mpesa/callback
MPESA_TRANSACTION_TYPE=CustomerPayBillOnline

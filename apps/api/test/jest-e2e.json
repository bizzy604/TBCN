{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "testTimeout": 60000,
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "isolatedModules": true
      }
    ]
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(pg)/)"
  ],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/test/jest.setup.ts"],
  "forceExit": true,
  "detectOpenHandles": true
}

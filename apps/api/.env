# ============================================
# Application
# ============================================
NODE_ENV=development
PORT=4000
CORS_ORIGIN=http://localhost:3000

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=brandcoach
DATABASE_SYNC=true
DATABASE_LOGGING=true

# ============================================
# Redis
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# JWT & Authentication
# ============================================
JWT_SECRET=super-secret-jwt-key-that-is-at-least-32-characters-long
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_ISSUER=brandcoachnetwork.com

# ============================================
# AWS (LocalStack for development)
# ============================================
AWS_REGION=us-east-1
AWS_S3_ENDPOINT=http://localhost:4566

# ============================================
# Email (disabled in development)
# ============================================
SENDGRID_FROM_EMAIL=noreply@brandcoachnetwork.com
SENDGRID_FROM_NAME=The Brand Coach Network
